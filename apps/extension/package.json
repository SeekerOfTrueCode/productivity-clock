{
  "name": "@nobodyz/productivity-clock_extension",
  "displayName": "Productivity clock",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@7.8.0",
  "description": "[description]",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "prepare": "rimraf extension/dist extension/manifest.json extension.*",
    "lint": "eslint .",
    "test": "vitest test"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.3.0",
    "@iconify/json": "^2.2.48",
    "@intlify/unplugin-vue-i18n": "^0.10.0",
    "@nobodyz/productivity-clock_eslint-config-custom": "workspace:*",
    "@nobodyz/productivity-clock_ui": "workspace:*",
    "@types/fs-extra": "^11.0.1",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/node": "^18.15.11",
    "@types/webextension-polyfill": "^0.10.0",
    "@types/youtube-player": "^5.5.7",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@unocss/reset": "^0.51.2",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vue/test-utils": "^2.3.2",
    "@vueuse/core": "^9.13.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.38.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "jsdom": "^21.1.1",
    "json-stringify-safe": "^5.0.1",
    "kolorist": "^1.7.0",
    "npm-run-all": "^4.1.5",
    "pinia": "^2.0.34",
    "pinia-plugin-persistedstate-2": "^2.0.14",
    "rimraf": "^3.0.2",
    "typescript": "^5.0.4",
    "unocss": "^0.51.2",
    "unplugin-auto-import": "^0.15.2",
    "unplugin-icons": "^0.16.1",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.2.1",
    "vite-plugin-pages": "^0.29.0",
    "vite-plugin-vue-layouts": "^0.8.0",
    "vitest": "^0.30.0",
    "vue": "^3.2.47",
    "vue-demi": "^0.13.11",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6",
    "web-ext": "^7.6.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.10.0",
    "youtube-player": "^5.6.0"
  }
}